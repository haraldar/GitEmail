{
    "name" : "GitEmail", 
    "version" : "3.0.0",
    "author" : "Harald Asmus",
    "manifest_version" : 2,
    "description" : "Get the email of most GitHub users by username or ID.",
    "icons" : {
        "48" : "icon48.png",
        "128" : "icon128.png"
    },
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_title" : "GitEmail",
        "default_icon" : {
            "48" : "icon48.png",
            "128" : "icon128.png"
        }
    },
    "content_scripts" : [
        {
            "matches" : [
                "*://github.com/*"
            ],
            "js": [
                "gitemail_elems.js"
            ]
        }
    ],
    "permissions" : [
        "storage",
        "tabs"
    ],
    "web_accessible_resources" : [
        "gitemail_logo.svg",
        "gitemail.js",
        "fullreport.html",
        "fullreport.js",
        "fullreport.css"
    ]
}