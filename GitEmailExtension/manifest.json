{
    "name" : "GitEmail", 
    "version" : "3.0.1",
    "author" : "Harald Asmus",
    "manifest_version" : 2,
    "description" : "Adds the user's public email to the profile overview and injects a Gists button.",
    "icons" : {
        "48" : "static/icon48.png",
        "128" : "static/icon128.png"
    },
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_title" : "GitEmail",
        "default_icon" : {
            "48" : "static/icon48.png",
            "128" : "static/icon128.png"
        }
    },
    "content_scripts" : [
        {
            "matches" : [
                "*://github.com/*"
            ],
            "js": [
                "gitemail_elems.js"
            ]
        }
    ],
    "permissions" : [
        "storage",
        "tabs"
    ],
    "web_accessible_resources" : [
        "gitemail.js",
        "search/gitemail_search.css",
        "search/gitemail_search.html",
        "search/gitemail_search.js",
        "static/gitemail_logo.svg",
        "static/icon48.png",
        "static/icon128.png",
        "invitations/*"
    ]
}